#!/usr/bin/env bash

# Exit the script if any command fails
set -e

# Base directory
BASE_DIR="/Users/maxbeizer/code/zerm/com.max-beizer.zerm.sdPlugin/imgs/actions"

# Function to convert SVG to PNG
convert_icons() {
  local action_dir="$1"
  
  echo "Converting icons for $action_dir..."
  
  # Small icon (for catalog)
  if [ -f "$BASE_DIR/$action_dir/icon.svg" ]; then
    echo "  Converting icon.svg to icon.png"
    /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/icon.svg" -resize 20x20 "$BASE_DIR/$action_dir/icon.png"
    /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/icon.svg" -resize 40x40 "$BASE_DIR/$action_dir/icon@2x.png"
  fi
  
  # Key icons (for button display) - Map action specific SVGs to key_0.png and key_1.png
  case "$action_dir" in
    "zoom-mute-toggle")
      if [ -f "$BASE_DIR/$action_dir/muted.svg" ]; then
        echo "  Converting muted.svg to key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/muted.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/muted.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_0@2x.png"
      fi
      
      if [ -f "$BASE_DIR/$action_dir/unmuted.svg" ]; then
        echo "  Converting unmuted.svg to key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/unmuted.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/unmuted.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_1@2x.png"
      fi
      ;;
      
    "zoom-video-toggle")
      if [ -f "$BASE_DIR/$action_dir/video-off.svg" ]; then
        echo "  Converting video-off.svg to key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/video-off.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/video-off.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_0@2x.png"
      fi
      
      if [ -f "$BASE_DIR/$action_dir/video-on.svg" ]; then
        echo "  Converting video-on.svg to key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/video-on.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/video-on.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_1@2x.png"
      fi
      ;;
      
    "zoom-share-screen")
      if [ -f "$BASE_DIR/$action_dir/not-sharing.svg" ]; then
        echo "  Converting not-sharing.svg to key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/not-sharing.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/not-sharing.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_0@2x.png"
      fi
      
      if [ -f "$BASE_DIR/$action_dir/sharing.svg" ]; then
        echo "  Converting sharing.svg to key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/sharing.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/sharing.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_1@2x.png"
      fi
      ;;
      
    "zoom-focus")
      if [ -f "$BASE_DIR/$action_dir/zoom-running.svg" ]; then
        echo "  Converting zoom-running.svg to key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/zoom-running.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/zoom-running.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_0@2x.png"
      fi
      
      if [ -f "$BASE_DIR/$action_dir/no-zoom.svg" ]; then
        echo "  Converting no-zoom.svg to key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/no-zoom.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/no-zoom.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_1@2x.png"
      fi
      ;;
      
    "zoom-leave-meeting")
      if [ -f "$BASE_DIR/$action_dir/in-meeting.svg" ]; then
        echo "  Converting in-meeting.svg to key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/in-meeting.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_0.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/in-meeting.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_0@2x.png"
      fi
      
      if [ -f "$BASE_DIR/$action_dir/no-meeting.svg" ]; then
        echo "  Converting no-meeting.svg to key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/no-meeting.svg" -resize 72x72 "$BASE_DIR/$action_dir/key_1.png"
        /opt/homebrew/bin/convert "$BASE_DIR/$action_dir/no-meeting.svg" -resize 144x144 "$BASE_DIR/$action_dir/key_1@2x.png"
      fi
      ;;
  esac
}

# Convert icons for all actions
for action_dir in $(ls "$BASE_DIR"); do
  convert_icons "$action_dir"
done

echo "âœ… All icons converted successfully!"
